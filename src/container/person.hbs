{{#with person}}
    <main class="ms-2">
        <div>
            <h2>{{name}} ({{age}})</h2>
            <p>{{gender}}</p>

            <hr class="my-5">

            {{> title data= "My address"}}      
            {{#with address}}
            <address> 
                <div>
                    {{country}}, {{state}}, {{city}}
                </div>
                <div>
                    {{street}}
                </div>
                <div>
                    {{zip}}
                </div>
            </address>
            {{/with}}
        </div>

        <hr class="my-5">

        <div>
            <strong>Educations</strong>

            <ul>
                {{#each education}}
                <li>
                    <div>
                        {{university}}
                    </div>

                    <div class="mt-3">
                       {{degree}} - {{major}} (year of draduation - {{graduationYear}})
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

        <hr class="my-5">

        <section>
            <strong>Work experience</strong>

            <ul>
                {{#each workExperience}}
                <li>
                    <div>
                        <strong>{{company}}({{year_founded}})</strong> - {{title}}
                    </div>
                    <div>
                        Industry: <strong>{{industry}}</strong>
                    </div>

                    <em class="mt-3">Responsibilities: </em>

                    <ol>
                        {{#each responsibilities}}
                        <li>
                            <p>{{this}}</p>
                        </li>
                        {{/each}}
                    </ol>
                    
                    <div class="mt-3">
                        Working time: {{startDate}} - {{endDate}}
                    </div>

                    <hr class="my-5">

                    <div>
                        <ul>
                            {{#each employees}}
                            <li>
                                <div>
                                    <strong>{{name}}({{position}})</strong>
                                </div>
                                <div>
                                    Department - {{department}}
                                </div>

                                <div class="my-3">
                                    <em>Projects:</em>
                                </div>

                                <ol>
                                    {{#each projects}}
                                    <li>
                                        <div>
                                            Project name: <strong>{{name}}</strong>
                                        </div>
                                        <div>
                                            <small>Description: {{description}}</small>
                                        </div>

                                        <div class="mt-3">
                                            Project status: {{status}}
                                        </div>
                                        
                                        <hr class="my-5">

                                        <div>
                                            <div>
                                                <em>Project teams</em>
                                            </div>
                                            
                                            <ul class="mt-3">
                                                {{#each teams}}
                                                <li>

                                                    <div>
                                                        <strong>{{team_name}}</strong>
                                                    </div>
                                                    
                                                    {{#with team_leader}}
                                                    <div class="mt-3">
                                                       <div>
                                                         {{title}}: <em>{{name}}</em>
                                                       </div>

                                                       {{> link href="mailto:{{email}}" text=email noLine=true}}
                                                    </div>
                                                    {{/with}}

                                                    <div class="my-3"> 
                                                        <strong>Team:</strong>
                                                    </div>

                                                    <ol>
                                                        {{#each team_members}}
                                                        <li>
                                                            <div>
                                                                {{name}} - {{title}}
                                                            </div>
                                                            <div>
                                                                {{> link href="mailto:{{email}}" text=email noLine=true}}
                                                            </div>

                                                            <div class="mt-3">
                                                                <em>Technologies:</em>
                                                            </div>

                                                            <ul>
                                                                {{#each skills}}
                                                                <li>
                                                                    {{this}}
                                                                </li>
                                                                {{/each}}
                                                            </ul>

                                                            <div class="mt-3">
                                                                <em>Projects of {{name}}:</em>   
                                                            </div>

                                                            <hr class="my-5">

                                                            <ul>
                                                                {{#each projects}}
                                                                    <li>
                                                                        <div> <b>{{name}}</b> </div>
                                                                        <div><small>Description: {{description}}</small></div>

                                                                        <div class="mt-3">
                                                                            <i>Technologies used:</i>
                                                                            <ol>
                                                                                {{#each technologies}}
                                                                                <li>
                                                                                    {{this}}
                                                                                </li>
                                                                                {{/each}}
                                                                            </ol>
                                                                        </div>

                                                                        <div class="mt-3">
                                                                            <i>Team members:</i>
                                                                        </div>
                                                                        
                                                                        <ol>
                                                                            {{#each team_members}}
                                                                            <li>
                                                                                <div>
                                                                                    {{name}} - {{title}}
                                                                                </div>
                                                                            </li>
                                                                            {{/each}}
                                                                        </ol>
                                                                    </li>
                                                                {{/each}}
                                                            </ul>
                                                        </li>
                                                        {{/each}}
                                                    </ol>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ol>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>