<main class="ms-1">
    <div class="row">
        {{#with formBlock}}
        <div class="col-8 mt-5">
            <h1 class="col-12 ps-0">{{header}}</h1>
            <div class="col-12 my-3">
                <span>{{rating.title}}: {{rating.value}}</span>
            </div>
            {{#with actionBlock}}
                <div class="nav nav-tabs">
                    <div class="row col-12 mb-0 ps-0">
                        {{#each tabs}}
                        <div class="col-4 text-center">
                            <div class="nav-item">
                                <a href="#" class="nav-link {{#if isActive}} active {{/if}}">{{#if isActive}} <b> {{/if}}{{text}}{{#if isActive}} </b> {{/if}}</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <hr class="my-5">

                {{#with report}}
                <div class="card col-12">
                    <div class="ms-3 mt-3">
                        {{title}}
                    </div>
                    <div class="ms-3 my-3">
                        <a type="button" href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                    </div>
                </div>
                {{/with}}
            {{/with}}
        
            <hr class="my-5">
            
            {{#with feedbackBlock}}
                <h2 class="col-12">{{title}}</h2>
                <ul class="row col-12 ps-0">
                    {{#each buttons}}
                    <div class="col-3 me-0">
                        <a type="button" href="{{link}}" class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isWarning}} btn-warning {{/if}} {{#if isDanger}} btn-danger {{/if}}">{{text}}</a>
                    </div>
                    {{/each}}
                </ul>
            {{/with}}
        </div>

        {{#with goodsInfo}}
            <div class="col-4 mt-5">
                <div class="col-12 card">
                    <img class="m-3" src="{{photo}}" alt="goodsPic">
                    <div class="ms-3 mb-3">
                        <span>{{name}}</span>
                    </div>
                </div>
                <div class="col-12 card mt-3">
                    <div class="m-3">
                        <b>{{price}}</b>
                    </div>
                    <ul class="ps-0 ms-3">
                        {{#each buttons}}
                            <div class="mb-3" >
                                <a type="button" href="{{link}}" class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-secondary {{/if}} {{#if isSuccess}} btn-success {{/if}} {{#if isWarning}} btn-warning {{/if}} {{#if isDanger}} btn-danger {{/if}}">{{text}}</a>
                            </div>
                        {{/each}}
                    </ul>
                </div>
                <div class="card col-12 mt-3">
                    <div class="m-3">
                        {{seller.title}}: <b>{{seller.value}}</b>
                    </div>
                </div>
            </div>
        {{/with}}
        {{/with}}

        <hr class="my-5">

        <div class="col-12"> 
            {{#each reviewList}}
                {{> reviewitem item=this}}
            {{/each}}
        </div>
    </div>
</main>