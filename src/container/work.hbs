{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}} (still working)
                            {{/if}}
                        </div>

                        <br>
                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link href=company.url text=company.name blank=true noLine=true}}
                            {{else}}
                            {{company.name}}
                            {{/if}}

                        </div>

                        <br>

                        <div><strong>Projects : ({{projectAmount}})</strong></div>

                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link href=url text=name blank=true noLine=true}}</div>

                                <br>

                                <div>
                                    <p>
                                        {{about}}
                                    </p>
                                </div>

                                <br>

                                <div>
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>

                                <br>

                                <div>
                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <br>

                                <div>
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>

                                <br>

                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

