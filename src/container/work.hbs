{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

{{#with main}}
<main class="ms-2">
    <div>
        {{> title data="Work history" big=true}}
        <div>
            <ul>
                {{#each works}}
                <li {{#unless @last}} class="mb-3" {{/unless}}>
                    <div>{{position}}</div>

                    <div class="my-3">
                        {{duration.from}} -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}} (still working)
                        {{/if}}
                    </div>

                    <div class="my-3">
                        {{#if company.url}}
                        {{> link href=company.url text=company.name blank=true noLine=true}}
                        {{else}}
                        {{company.name}}
                        {{/if}}

                    </div>

                    <div class="mb-3"><strong>Projects : ({{projectAmount}})</strong></div>

                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{> link href=url text=name blank=true noLine=true}}</div>

                            <div class="my-3">
                                <p>
                                    {{about}}
                                </p>
                            </div>

                            <div>
                                <em>Project stacks ({{stackAmount}})</em>
                            </div>

                            <div class="my-3">
                                <ul>
                                    {{#each stacks}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                            <div>
                                <em>Project awards ({{awardAmount}})</em>
                            </div>

                            <div class="mt-3">
                                <ul>
                                    {{#each awards}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</main>
{{/with}}

