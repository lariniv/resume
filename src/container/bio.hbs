<main class="ms-2">
    <div>
        {{> title data=name big=true}}
    </div>

    <hr class="my-5">

    <section>
        <div>
            <i>Date of birth - {{birthdate}}</i>
        </div>

        <div>
            <i>Nationality - {{nationality}}</i>
        </div>

        <div class="mb-3">
            <address>Place - {{birthplace}}</address>
        </div>
        <div>
            <div>
                <i>Date of death - {{deathdate}}</i>
            </div>

            <div>
                <address>Place - {{deathplace}}</address>
            </div>
        </div>
    </section>

    <hr class="my-5">

    <section>
        {{> title data=occupation}}

        <div class="my-3">
            <div>
                <em>Known for:</em>
            </div>
            <ul>
                {{#each known_for}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="mb-3">
            <div>
                <em>His other discoveries:</em>
            </div>

            <ul>
                {{#each major_discoveries}}
                <li>
                    <div>
                        <b>{{title}} ({{year}})</b>
                    </div>

                    <br>

                    <div>
                        {{description}}
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

        <div>
            <div>
                <em>His notable publications:</em>
            </div>
            
            <ul>
                {{#each notable_publications}}
                    <li>
                        <div>
                            <b>{{title}}({{year}})</b>
                        </div>

                        <div>
                            <small> Publisher - {{publisher}}</small>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>

    <hr class="my-5">

    <section>
        {{> title data="Education and awards"}}

        <div class="my-3">
            <em>Universities:</em>
        </div>

        <div>
            <ul>
                {{#each education}}
                <li>
                    <div>
                        {{institution}} - {{year}}
                    </div>

                    <div>
                        {{field}} - {{degree}}
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="my-3">
            <em>Awards:</em>
        </div>

        <div>
            <ul>
                {{#each awards}}
                <li>
                    <div>
                        <strong>{{title}} - {{year}}</strong>
                    </div>

                    <div>
                        {{description}}
                    </div>
                    
                    
                </li>
                {{/each}}
            </ul>
        </div>

    </section>

    <hr class="my-5">

    <section>
        {{> title data="People"}}
        
        <div class="my-3">
                <div>
            <em>His partners:</em>
        </div>
            <ul>
                {{#each partners}}
                <li>
                    <div>
                        <b>{{name}}</b>
                    </div>
                    
                    <br>

                    <div>
                        <i>Relations - {{relationship}}</i>
                    </div>

                    <div>
                        <i>Years - {{years}}</i>
                    </div>

                    <br>
                </li>
                {{/each}}
            </ul>
        </div>

        <div>
            <div>
                <em>Was influenced by:</em>
            </div>

            <ul>
                {{#each influences}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>

            <br>

            <div>
                <em>Influenced:</em>
            </div>

            <ul>
                {{#each influenced}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>

        {{#with contributions }}
        <div>
            <div>
                <em>{{title}}:</em>
            </div>
        
            <div class="my-3">
                <i><small>{{field}} - {{description}}</small></i>
            </div>

            <div>
                <i><small>{{year}}</small></i>
            </div>
        </div>

        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{> title data="Quotes"}}

        <ul>
            {{#each quotes}}
            <li class="mb-3">
                <q>{{this}}</q>     
            </li>
            {{/each}}
        </ul>
    </section>
</main>